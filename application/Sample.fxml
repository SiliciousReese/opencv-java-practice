<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="captureButton" mnemonicParsing="false" onAction="#capture" prefHeight="26.0" prefWidth="156.0" text="Capture Video" />
            <Button fx:id="trainButton" mnemonicParsing="false" onAction="#train" prefHeight="26.0" prefWidth="53.0" text="Train" />
         </children>
      </HBox>
   </bottom>
   <left>
      <ImageView fx:id="imageViewer" fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
